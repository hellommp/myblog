<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tianli.dao.CommentDao">

	<insert id="addComment">
		INSERT INTO 
			comment(content,createdate,bid)
		VALUES
			(#{content},#{createDate},#{bid})
	</insert>
	
	<select id="queryCommentsById" parameterType="int" resultType="Comment">
		SELECT * FROM
			comment
		WHERE
			bid = #{id}
	</select>
	
	<delete id="deleteComment">
		DELETE FROM
			comment
		WHERE 
			id = #{id}
	</delete>
	<resultMap id="CommentResult" type="com.tianli.entity.Comment">
		<id column="cid" property="id" />
		<result column="content" property="content" />
		<result column="createdate" property="createDate" />
		<result column="email" property="email" />

		<association property="blog" javaType="com.tianli.entity.Blog">
			<result column="bid" property="id" />
			<result column="title" property="title" />
		</association>
	</resultMap>
	
	<select id="listByPage" resultMap="CommentResult">
		SELECT
			c.id 'cid',c.*,b.title,b.id 'bid'
		FROM
			comment c, blog b
		WHERE
			c.bid = b.id
		LIMIT 
		    #{start},#{end}
		
	</select>
	
	<select id="getTotal" resultType="java.lang.Integer">
		SELECT 
			COUNT(*)
		FROM
			comment
	</select>
	
</mapper>